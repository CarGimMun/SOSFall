<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121313"
    tools:context="MainActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/andargif"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="307dp"
        android:src="@drawable/andargif"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/callButton"
        android:layout_width="wrap_content"
        android:layout_height="159dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="279dp"
        android:background="@mipmap/llamada1"
        android:contentDescription="Iniciando llamada de emergencia" />

    <ImageButton
        android:id="@+id/warning"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="438dp"
        android:background="@mipmap/caida2"
        android:contentDescription="Warning icon"
        android:visibility="invisible"
        app:srcCompat="@mipmap/caida2" />

    <ListView
        android:id="@+id/titleCaidas"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="271dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:showDividers="beginning|middle|end"
        android:textColor="@color/white" />

    <ListView
        android:id="@+id/tablaMainCaidas"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="12dp"
        android:showDividers="beginning|middle|end"
        android:textColor="@color/white" />
</RelativeLayout>